# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=pgopher
pkgver=gtk2
pkgrel=1
epoch=
pkgdesc="pgopher"
arch=('x86_64')
url="https://pgopher.chm.bris.ac.uk/Help/main.htm"
license=('LGPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://pgopher.chm.bris.ac.uk/download/$pkgname-$arch-linux-$pkgver.tgz")
noextract=()
md5sums=()
validpgpkeys=()

source_filename="${source[0]##*/}"
source_url="${source[0]}"
prepare() {
    if [ -f "$source_filename" ]; then
        echo "Using existing $source_filename"
    else
        echo "Downloading $source_filename"
        curl -L -O "$source_url"
    fi
}

package() {
    install -Dm755 ${srcdir}/pgopher -t ${pkgdir}/usr/bin
    install -Dm755 ${srcdir}/pgo -t ${pkgdir}/usr/bin
    install -Dm755 ${srcdir}/tabslave -t ${pkgdir}/usr/bin
}

sha256sums=('SKIP')
